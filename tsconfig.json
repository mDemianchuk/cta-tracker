{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "lib": [ "es2015", "dom" ],
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}